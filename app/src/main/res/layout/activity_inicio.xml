        app:layout_constraintTop_toBottomOf="@+id/ImgSilvo"
        app:layout_constraintVertical_bias="0.461" />

    <Button
        android:id="@+id/BtnRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
